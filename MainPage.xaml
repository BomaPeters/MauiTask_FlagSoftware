<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTask_FlagSoftware.MainPage">

   
        <StackLayout Padding="15">
    
            <Picker x:Name="picker"
        Title="Select Category">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>smartphones</x:String>
                    <x:String>laptops</x:String>
                    <x:String>fragrances</x:String>
                    <x:String>skincare</x:String>
                    <x:String>groceries</x:String>
                    <x:String>furniture</x:String>
                    <x:String>tops</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <ListView x:Name="productListView"  ItemsSource="{Binding ProductList}" ItemTapped="productListView_ItemTapped">
                <ListView.ItemTemplate >
                    <DataTemplate >
                    <ImageCell ImageSource="{Binding thumbnail}" Text="{Binding title}" Detail="{Binding price, StringFormat='Price: {0:C}'}"  Height="150"  >

                    </ImageCell>
                </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
   

</ContentPage>
